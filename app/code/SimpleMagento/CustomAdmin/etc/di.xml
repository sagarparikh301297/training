<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <virtualType name="AffiliateGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">SimpleMagento\Database\Model\ResourceModel\AffiliateMember\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">MemberGridFilterPool</argument>
        </arguments>
    </virtualType>

    <virtualType name="MemberGridFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\FullText</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="affiliate_member_listing_data_source" xsi:type="string">SimpleMagento\Database\Model\Resource\Grid\Collection</item>
            </argument>
        </arguments>
    </type>

    <virtualType name="SimpleMagento\Database\Model\Resource\Grid\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">affiliate_member</argument>
            <argument name="resourceModel" xsi:type="string">SimpleMagento\Database\Model\ResourceModel\AffiliateMember</argument>
        </arguments>
    </virtualType>

</config>