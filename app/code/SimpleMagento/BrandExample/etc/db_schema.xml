<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="mage2tv_brand_example" resource="default" engine="innodb" comment="List of data/schema patches">
        <column xsi:type="int" name="id" identity="true"  unsigned="true" nullable="false" />
        <column xsi:type="varchar" name="name" length="1024" nullable="false" comment="Patch Class Name" />
        <column xsi:type="text" name="description"  nullable="false"  />
        <column xsi:type="boolean" name="is_enabled" nullable="false"  />
        <column xsi:type="decimal" name="weighting_factor" nullable="false" scale="4"  />
        <column xsi:type="smallint" name="website_id" padding="5" unsigned="true" nullable="false"/>
        <column xsi:type="timestamp" name="created_at" default="CURRENT_TIMESTAMP"  />
        <column xsi:type="timestamp" name="updated_at" default="CURRENT_TIMESTAMP" nullable="false" on_update="true" />
        <constraint xsi:type="foreign" referenceId="MAGE2TV_BRAND_EXAMPLE_WEBSITE_ID_STORE_WEBSITE_WEBSITE_ID" column="website_id"
                    onDelete="CASCADE"
                    referenceTable="store_website" referenceColumn="website_id" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id" />
        </constraint>
    </table>
</schema>
